<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.name %></td>
        <td><%= birthday.date_birthday.strftime("%d/%m/%y") if birthday.date_birthday %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @birthdays%>

